<% layout("/layouts/boilerplate") %> 

<h1 class="pro-head">Subject Notes</h1>

<!-- <div class="note-data "> -->
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 ">
<% for(let note of allNotes) { %>
    <div class="note-card">
        <img src="<%= note.image.url %>" class="note-img">
        <div class="note-body">
            <h1 class="note-title"><%= note.title %></h1>

            <p class="note-info"><%= note.description.substring(0,100) %>...</p>

    
            <button class="note-btn"><a href="/Subject/<%=note._id %>">Read More</a></button>
        </div>
    
    </div>
<% } %>
</div>