<% layout("/layouts/boilerplate") %> 
    
<div class="notes-data">
<h1>All Notes</h1>
<div class="row  row-cols-lg-3  row-cols-md-2 row-cols-sm-1 mt-3">
<% for(let note of allNotes) { %>
    <div class="card col note-card">
        <img src="<%= note.image.url %>" class="card-img-top" alt="Note_image" style="height:20rem">
    <div class="card-body">
    <h5 class="card-title"><%= note.title %></h5>
    <p class="card-text"><%= note.description %></p>
    <a href="#" class="card-link">Download Here</a>
    <a href="/Notes/<%=note._id %>" class="card-link">Read More</a>
    </div>
</div>
<% } %>

</div>
