<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <h1 class="col-6 offset-3 notes-head">Welcome Back</h1>
    <p class="notes-details">Enter your credential to login</p>
    <div class="col-6 offset-3 notes-form">
        <form action="/login" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input name="username" id="username" type="text" class="form-control" required />
                <div class="valid-feedback">Looks good</div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input name="password" id="password" type="password" class="form-control" required />
            </div>
            <button class="btn btn-success">Login</button>
            <p class="notes-details">Don't have an account?<a href="/signup">Signup</a></p>
        </form>

    </div>


</div>

