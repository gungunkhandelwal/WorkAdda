<%- layout("/layouts/boilerplate") %> 

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0"><%= note.title %></h2>
                </div>
                
                <div class="card-body">
                    <div class="text-center mb-4">
                        <img src="<%= note.image.url %>" class="img-fluid rounded" alt="<%= note.title %>" style="max-height: 400px; width: auto;">
                    </div>
                    
                    <div class="details-section">
                        <h4>Description</h4>
                        <p class="card-text"><%= note.description %></p>
                    </div>
                    
                    <div class="links-section mt-3">
                        <h4>Resources</h4>
                        <div class="d-flex justify-content-between align-items-center">
                            <a href="<%= note.pdf.link %>" class="btn btn-success" target="_blank">
                              Click here for notes
                            </a>
                        </div>
                    </div>
                    
                    <div class="actions-section mt-4">
                        <h4>Actions</h4>
                        <div class="row">
                            <div class="col-md-6 mb-2">
                                <a href="/Program/<%= note._id  %>/edit" class="btn btn-warning w-100">
                                    Edit Note
                                </a>
                            </div>
                            <div class="col-md-6 mb-2">
                                <form method="POST" action="/Program/<%= note._id %>?_method=DELETE" class="d-grid">
                                    <button type="submit" class="btn btn-danger w-100" onclick="return confirm('Are you sure you want to delete this note?')">
                                        Delete Note
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
